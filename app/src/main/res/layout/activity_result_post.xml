<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultPostActivity">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTanggalact"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/textLocationact"
            android:layout_below="@+id/textTanggalact"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idFotoresult"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textLocationact"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCurhatact"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/idFotoresult"/>

        <Button
            android:id="@+id/btnvideo"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Video"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textCurhatact"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/btnback"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/textCurhatact"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@color/colorPrimary"
            android:text="BAck"
            android:textColor="#fff" />
    </RelativeLayout>
</ScrollView>