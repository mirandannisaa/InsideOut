<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity">


    <ImageView
        android:id="@+id/imageview_an"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/map"
        />

    <Button
        android:id="@+id/butlocat"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_pilihlocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_location"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:background="@color/colorPrimary"
        android:text="Track Location"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button_pilihlocation"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:text="Pick Location"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/textview_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:text="Click the button to track the location"
        />
</RelativeLayout>
</ScrollView>